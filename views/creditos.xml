<openerp>
	<data>
		<record model="ir.ui.view" id="creditos_form_view">
			<field name="name">creditos.form</field>
			<field name="model">aso.creditos</field>
			<field name="arch" type="xml">
				<form string="Formulario para creditos">
					<header>
						<button name="action_rechazado" type="object" string="Rechazar" states="ti" class="oe_highlight"/>
						<button name="action_tramite_inicial" type="object" string="Valorar" states="r,a"/>
						<button name="action_aprobado" type="object" string="Aprobar" states="ti"/>
						<button name="action_enviado" type="object" string="Enviar" states="a"/>
						<button name="action_desembolsado" type="object" string="Desembolsar" states="eu"/>
						<button name="action_formalizado" type="object" string="Formalizar" states="du"/>
						<button name="action_pago_parcial" type="object" string="Realizar Pagos" states="f"/>
						<button name="action_cancelado" type="object" string="Cancelar" states="pp"/>
						<field name="state" widget="statusbar"/>
					</header>
					<sheet>
						<group>
							<group>
								<field name="name"/>
								<field name="fuente_id" widget="selection"/>
								<field name="fecha_solicitud"/>
								<field name="actividad"/>
								<field name="plazo"/>
								<field name="fecha_aprobacion"/>	
							</group>
							<group>
								<field name="asociado_id"/>
								<field name="solicitud_c1"/>
								<field name="cosecha"/>
								<field name="monto"/>
								<field name="pagare_vigente"/>
								<field name="fecha_vencimiento"/>
							</group>
						</group>
						<group>
							<field name="observaciones"/>
						</group>
						<notebook>
                            <page string="Formulario C2">
                            	Formulario
                            </page>
                            <page string="Desembolsos">
                            	Desembolso
                            </page>
                            <page string="Formalizaciones">
                            	Formalizacion
                            </page>
                            <page string="Pagos Realizados">
                            	Pagos Realizados
                            </page>
                        </notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="creditos_tree_view">
			<field name="name">creditos.tree</field>
			<field name="model">aso.creditos</field>
			<field name="arch" type="xml">
				<tree string="Lista de creditos">
					<field name="name"/>
					<field name="asociado_id"/>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="creditos_list_action">
			<field name="name">Lista de creditos</field>
			<field name="res_model">aso.creditos</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Agregar el primer crédito</p>
			</field>
		</record>

		<menuitem id="submenu_item_cre_creditos_creditos" name="Créditos"
                  parent="submenu_cre_creditos"
                  action="creditos_list_action"/>
	</data>
</openerp>